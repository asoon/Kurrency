<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Transparent" parent="FullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">@dimen/title_view_size</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">@dimen/size_large</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/size_large</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="Text.EditText">
        <item name="android:layout_width">@dimen/edit_text_size</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:colorAccent">@color/blue_dark</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="Text.EditText.Decimal">
        <item name="android:digits">0123456789.,</item>
    </style>
</resources>
